{
    "name": "vscode-project-name-in-statusbar",
    "displayName": "Project Name in StatusBar",
    "description": "Simply adds project name in StatusBar",
    "version": "0.0.1",
    "publisher": "mujichOk",
    "engines": {
        "vscode": "^1.20.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/extension",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Project Name In StatusBar extension configuration",
            "properties": {
                "projectNameInStatusBar.mode": {
                    "type": ["string"],
                    "enum": [
                        "none",
                        "folder"
                    ],
                    "default": "folder",
                    "description": "Defines way of getting project name"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "tslint": "^5.8.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}